= form_for @merchant do |f|
  - if @merchant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@merchant.errors.count, "error")} prohibited this merchant from being saved:"
      %ul
        - @merchant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.number_field :phone
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :long
    = f.text_field :long
  .actions
    = f.submit 'Save'
