= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .col-1-2
    = f.email_field :email
    = f.label :email
  .col-1-2
    = f.password_field :password
    = f.label :password
  .col-1-1
    = f.check_box :remember_me
    = f.label :remember_me

  = f.submit "Sign in"
= render "devise/shared/links"
