= form_for @transporter do |f|
  - if @transporter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transporter.errors.count, "error")} prohibited this transporter from being saved:"
      %ul
        - @transporter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.number_field :phone
  .field
    = f.label :current_lat
    = f.text_field :current_lat
  .field
    = f.label :current_long
    = f.text_field :current_long
  .actions
    = f.submit 'Save'
