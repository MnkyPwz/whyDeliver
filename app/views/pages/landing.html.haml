%section.layer-1
  .wrapper
    %header.grid.pad.hero.group
      %h1 ORDERED BY YOU.
      %h2 DELIVERED BY YOUR NEIGHBOR.
      %button.group
        =link_to 'DELIVERY', '/form'
      %button.group
        =link_to 'MERCHANT', '/form'

%section.layer-2
  .wrapper
    %article.grid.pad
      %header.col-1
        %h3 
          WHYDELIVER? CAUSE IT LOCAL.
          / WHYDELIVER? CAUSE IT'S <div id="cycle"><div>FAST.</div><div>CHEAPER.</div><div>LOCAL.</div><div>GREEN.</div><div>SUSTAINABLE.</div><div>HELPS.</div></div>
      %ul.group
        %li.col-1-3
          .square.group
            %figure.group
              %img{:src => "/assets/account-guy.png", :class => 'account'}
              %h4 CUSTOMER
          %p Place an order with a local merchant
        %li.col-1-3
          .square.middle.group
            %figure.group
              %img{:src => "/assets/order.png", :class => 'merchant'}
              %h4 MERCHANT
          %p Merchant hands off merchant to delivery
        %li.col-1-3
          .square.group
            %figure.group
              %img{:src => "/assets/briefcase.png", :class => 'delivery'}
              %h4 DELIVERY
          %p Package is delivered to you in as soon as an hour