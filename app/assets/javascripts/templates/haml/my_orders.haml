.wrapper
  %aside.col-1-3.dashboard-aside
    %header 
      %h3 Deliver Good
    %ul.group.good-done
      %li.group
        .col-1-3.number 
          %h1 40
        %p.col-2-3.good-text pounds CO2 saved through local order filled
      %li.group
        .col-1-3.number 
          %h1 30
        %p.col-2-3.good-text grocery runs you've helped subsidize for underserved
      %li.group
        .col-1-3.number 
          %h1 100
        %p.col-2-3.good-text jobs have been created in your area since your joined

    %button Grab Code
    .guarantee.group
      %img{:src => '/assets/guarantee-badge.png'}
      %p When you arrange delivery with WhyDeliver, your merchandise is 100% insured as long as itâ€™s in our hands.

  %section.col-2-3.order-list
    %nav.group
      .col-3-4
        %input.search{:type => 'search'}
      .col-1-4
        %button.search Search
    %table
      %thead
        %tr
          %th.status STATUS
          %th.date DATE
          %th.product PRODUCT
          %th.name NAME
          %th.order_id ORDER #
      %tbody
        %tr{ 'ng-repeat' => 'order in orders', :class => 'group'}
          %td.status{:class => '{{order.order_status}}'} {{order.order_status}}
          %td.date {{order.created_at}}
          %td.product {{order.product_name}}
          %td.name {{order.customer_first_name}} {{order.customer_last_name}}
          %td.order_id
            %a{:href => '/tracking/{{order_id}}'} {{order.id}}